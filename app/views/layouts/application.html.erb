<!DOCTYPE html>
<html>
  <head>
    <title>MessageMe</title>
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="ui inverted menu">
    <a class="item">
      ChatRoom
    </a>
    <a class="item">
      Messages
    </a>

    <div class="right menu">

      <div class="item">
        <div class="ui dropdown item">
          Categories
          <i class="dropdown icon"></i>
          <div class="menu">
            <% if !is_loggedin? %>
            <a class="item" href="<%= login_path %>">Login</a>
            <a class="item" href="<%= signup_path %> ">SignUp</a>
              <% else %>
              <a class="item" href="<%= logout_path %> ">Logout</a>
              <a class="item" href="<%= root_path %> ">Home</a>
              <%end %>

          </div>
        </div>
      </div>


      <% if !is_loggedin? %>
    <div class="item" >

      <%= link_to "Sign Up", signup_path , class: " ui primary button" %>

    </div>
        <% end %>

    </div>



  </div>
    <div class="ui container">
      <%= render "layouts/notifications" %>
    <%= yield %>


      <%= debug(params) %>
    </div>
  </body>
</html>
