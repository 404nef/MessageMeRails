
<%= render "layouts/errors", obj: @user %>

<%= form_for(@user , html: {class: "ui form" , role: "form"}) do |f| %>
  <div class="field">
    <label>UserName</label>
    <%= f.text_field :username , placeholder: "User Name" %>
  </div>

  <div class="field">
    <label>Email</label>

    <%= f.email_field :email , placeholder: "example@example.com"%>
  </div>

  <div class="field">
    <label>Password</label>

    <%= f.password_field :password%>
  </div>

  <%= f.submit "Sign Up", class: "ui button" %>


<% end %>